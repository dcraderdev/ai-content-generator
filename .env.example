# ===========================================
# AI Content Generator - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# AI API Keys (Required - pick at least one)
# ===========================================

# Anthropic Claude (for text generation)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Replicate (for image generation - Recraft, Flux, Ideogram)
REPLICATE_API_KEY=r8_your-key-here

# OpenAI (optional - for DALL-E image generation)
# OPENAI_API_KEY=sk-your-key-here

# ===========================================
# Authentication
# ===========================================

# Secret key for JWT tokens (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# ===========================================
# Server Configuration
# ===========================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4000

# Backend port
PORT=8000

# Node environment
NODE_ENV=development
